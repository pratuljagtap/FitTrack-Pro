{
  "name": "Workout",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Workout session name"
    },
    "date": {
      "type": "string",
      "format": "date-time",
      "description": "When the workout was performed"
    },
    "duration_minutes": {
      "type": "number",
      "description": "Total workout duration in minutes"
    },
    "total_volume": {
      "type": "number",
      "description": "Total weight lifted (weight x reps x sets)"
    },
    "calories_burned": {
      "type": "number",
      "description": "Estimated calories burned"
    },
    "notes": {
      "type": "string",
      "description": "Workout notes"
    },
    "workout_type": {
      "type": "string",
      "enum": [
        "strength",
        "cardio",
        "flexibility",
        "mixed"
      ],
      "description": "Type of workout"
    }
  },
  "required": [
    "name",
    "date",
    "workout_type"
  ]
}
